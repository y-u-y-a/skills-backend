{
  "name": "skills_backend",
  "version": "1.0.0",
  "description": "skills_backend",
  "main": "app.js",
  "author": "skills",
  "license": "ISC",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon -L",
    "prod": "yarn install && yarn build && yarn start",
    "build": "rm -rf dist && tsc && webpack",
    "start": "node dist/app.js",
    "migrate:up": "yarn typeorm schema:sync",
    "migrate:down": "yarn typeorm schema:drop",
    "migrate:generate": "yarn typeorm migration:generate --name",
    "migrate:run": "yarn typeorm migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config src/database/ormconfig",
    "fmt": "prettier --write src/**/*.ts"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/glob": "^7.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mysql": "^2.15.17",
    "@types/node": "^14.14.17",
    "graphql-tag": "^2.11.0",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "apollo-server": "^2.19.2",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.13.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-import": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "typeorm": "^0.2.29"
  }
}
