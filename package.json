{
  "name": "skills_backend",
  "version": "1.0.0",
  "description": "skills_backend",
  "main": "app.js",
  "author": "skills",
  "license": "ISC",
  "scripts": {
    "dev": "nodemon -L",
    "prod": "yarn build && node dist/app.js",
    "build": "rm -rf dist && tsc",
    "migrate:up": "yarn typeorm schema:sync",
    "migrate:down": "yarn typeorm schema:drop",
    "migrate:create": "yarn typeorm migration:generate --name",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "fmt": "prettier --write src/**/*.ts",
    "ts-node": "ts-node"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/glob": "^7.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mysql": "^2.15.17",
    "@types/node": "^14.14.17",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "apollo-server": "^2.19.2",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^7.0.2",
    "jsonwebtoken": "^8.5.1",
    "typeorm": "^0.2.29"
  }
}
